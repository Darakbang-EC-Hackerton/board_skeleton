{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
+    </tr>
    </thead>
    <tbody>
    <!-- Entity를 가져오기 -->
    {{#article}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}}
    </tbody>
</table>
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">수정</a>
<a href="/articles" class="btn btn-success">목록으로 돌아가기</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">삭제</a>

